            "User activity chart",
            "Top service categories"
          ]
        },
        "Ads & Sponsors": {
          "components": [
            "Active ads list",
            "Add new sponsor banner",
            "Schedule start/end dates"
          ]
        },
        "Settings": {
          "components": [
            "Handling charge setup",
            "Commission percentage input",
            "Admin users management"
          ]
        }
      }
